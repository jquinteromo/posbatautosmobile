<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d58cfc"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:fontFamily="@font/tradewindsregular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bat Autos"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="25dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="290dp"
            android:layout_height="350dp"
            android:background="#d1c4e9"
            android:padding="20dp"
            app:cardBackgroundColor="#d1c4e9"
            app:cardCornerRadius="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Iniciar Sesión"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingHorizontal="60dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginTop="50dp">


                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:drawableStart="@drawable/baseline_inbox"
                        android:drawablePadding="10dp"
                        android:hint="Ingresa Correo"
                        android:textColorHint="@color/white"
                        android:textSize="12sp" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="30dp" />

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:drawableStart="@drawable/baseline_lock"
                        android:drawablePadding="10dp"
                        android:hint="Ingresa Contraseña"
                        android:inputType="textPassword"
                        android:textColorHint="@color/white"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingVertical="13dp"
                    android:layout_marginBottom="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Registrase"
                        android:id="@+id/registrar"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Registrase"
                        android:id="@+id/clave"
                        android:textColor="@color/black"/>

                </LinearLayout>


                <Button
                    android:id="@+id/CustomButton"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:backgroundTint="#d58cfc"
                    android:text="ingresar" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>